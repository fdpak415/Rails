<h1>Create Rental Request</h1>

<form action="<%= cat_rental_requests_url %>" method="post">
  <label for="cat_rental_request_cat_id">Cat</label>
  <select name="cat_rental_request[cat_id]"
          id="cat_rental_request_cat_id">
    <option></option>
    <% Cat.all.each do |cat| %>
      <% selected = @rental_request.cat_id == cat.id %>
      <option <%= selected ? "selected" : "" %>
              value="<%= cat.id %>">
        <%= cat.name %>
      </option>
    <% end %>
  </select>

  <br><br>

  <label for="cat_start_date">Start Date</label>
  <input type="date" name="cat_rental_request[start_date]" id="cat_start_date" value="">

  <label for="cat_end_date">End Date</label>
  <input type="date" name="cat_rental_request[end_date]" id="cat_end_date" value="">

  <br><br>

  <input type="submit" value="Create Request">

</form>
