<style>
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th, td {
    padding: 5px;
    text-align: left;
}
</style>


<table>
  <caption><h1> <%= @cat.name %> </h1></caption>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>

  <% [:age, :birth_date, :color, :sex, :description].each do |attr_name| %>
  <tr>
      <td> <%= attr_name.upcase %> </td>
      <td> <%= @cat.send(attr_name) %> </td>
    <% end %>
  </tr>
</table>

<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.rental_requests.order("start_date").each do |req| %>
    <%= render "req_tr", req: req %>
  <% end %>
</table>

<br>

 <h3><%= link_to "Make new rental request", new_cat_rental_request_url %></h3>
